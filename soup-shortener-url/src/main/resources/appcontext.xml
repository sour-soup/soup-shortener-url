<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!--> Repository </-->
    <bean id="LinkRepository" class="org.example.repository.Impl.LinkRepositoryImpl"/>
    <bean id="AuthorizeRepository" class="org.example.repository.Impl.AuthorizeRepositoryImpl"/>

    <!--> Service </-->
    <bean id="LinkService" class="org.example.service.Impl.LinkServiceImpl">
        <constructor-arg name="linkRepository" ref="LinkRepository"/>
    </bean>
    <bean id="AuthorizeService" class="org.example.service.Impl.AuthorizeServiceImpl">
        <constructor-arg name="authorizeRepository" ref="AuthorizeRepository"/>
    </bean>

    <!--> Controller <-->
    <bean id="LinkController" class="org.example.controller.LinkController">
        <constructor-arg name="linkService" ref="LinkService"/>
    </bean>
    <bean id="AuthorizeController" class="org.example.controller.AuthorizeController">
        <constructor-arg name="authorizeService" ref="AuthorizeService"/>
    </bean>

</beans>